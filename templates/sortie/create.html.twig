{% extends 'base.html.twig' %}

{% block title %}Nouvelle sortie | {{ parent()}} {% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('script/lieu.js') }}" defer></script>
{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center">Créer une sortie</h2>

    <row class="row">
        <section class="col-6">
            {{ form_start(form) }}
            {{ form_widget(form) }}
        </section>
        <section class="col-6">
            <label for="campus">Campus</label><input type="text" id="campus" name="campus" value="{{ app.user.campus }}" readonly><br>

            {# TODO peut-être pas de ville par défaut #}
            <label for="ville">Ville</label>
            <select id="ville" name="ville">
                <option></option>
                {% for ville in villes %}
                    <option value="{{ ville.id }}">{{ ville.nom }}</option>
                {% endfor %}
            </select><br>

            {# TODO peut-être pas de lieu par défaut, et donc ni rue, cp, lati et longi #}
            <label for="lieu">Lieu</label>
            <select id="lieu" name="lieu"></select><br>

            <label for="rue">Rue</label>
            <input type="text" id="rue" name="rue" value="" readonly><br> {# TODO input ou p ? #}

            <label for="cp">Code postal</label>
            <input type="text" id="cp" name="cp" value="" readonly><br> {# TODO input ou p ? #}

            <label for="latitude">Latitude</label>
            <input type="text" id="latitude" name="latitude" value="" readonly><br> {# TODO input ou p ? #}

            <label for="longitude">Longitude</label>
            <input type="text" id="longitude" name="longitude" value="" readonly><br> {# TODO input ou p ? #}
        </section>
        <button>Enregistrer</button>
        <button>Publier la sortie</button>
        <button type="button" ><a href="{{ path('app_main') }}">Annuler</a></button>
        {{ form_end(form)}}
    </row>
</div>
{% endblock %}
